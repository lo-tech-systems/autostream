[Unit]
Description=Capture SD Card Health Percentage
After=local-fs.target

[Service]
Type=oneshot
User=root
ExecStart=/bin/sh -o pipefail -c '/usr/local/sbin/sdmon -q -a /dev/mmcblk0 | /usr/bin/jq -r ".healthStatusPercentUsed" > /opt/autostream/sdcardhealth'

